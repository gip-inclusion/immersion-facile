{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
  "extends": "//",
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": {
          "level": "error",
          "options": {
            "allow": ["error", "time", "timeEnd"]
          }
        }
      }
    }
  },
  "formatter": {
    "lineWidth": 80,
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "formatWithErrors": true
  }
}

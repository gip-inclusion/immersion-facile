{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "extends": "//",
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": {
          "level": "error",
          "fix": "none"
        }
      },
      "correctness": {
        "useExhaustiveDependencies": "warn"
      }
    }
  },
  "files": {
    "maxSize": 10485760,
    "ignoreUnknown": true,
    "includes": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.json",
      "src/**/*.scss",
      "biome.json",
      "tsconfig.json",
      "vite.config.ts",
      "package.json",
      "postcss.config.js"
    ]
  }
}

{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
  "extends": "//",
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "error"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn"
      }
    }
  },
  "files": {
    "maxSize": 10485760,
    "ignoreUnknown": true,
    "includes": ["!**/public", "!**/dev-dist", "!**/scalingo", "!**/dist"]
  }
}

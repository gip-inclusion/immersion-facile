{
  "name": "root",
  "version": "1.0.0",
  "workspaces": [
    "front",
    "back",
    "shared",
    "libs/*"
  ],
  "scripts": {
    "prepare": "husky install && chmod a+x .husky/pre-commit && chmod a+x .husky/pre-push",
    "prettier": "pnpm prettier:glob --write ./**/src/",
    "prettier:check": "pnpm prettier:glob --check ./**/src/",
    "prettier:glob": "prettier --config=./.tooling/.prettier/.prettierrc.json",
    "back": "pnpm --dir back",
    "front": "pnpm --dir front",
    "shared": "pnpm --dir shared",
    "react-design-system": "pnpm --dir libs/react-design-system",
    "cypress": "pnpm --dir cypress cypress:open",
    "lint:back": "pnpm back lint",
    "lint:front": "pnpm front lint",
    "lint:shared": "pnpm shared lint",
    "lint:react-design-system": "pnpm react-design-system lint",
    "lintconfig:glob": "eslint --config=.tooling/.eslint/.eslintrc.js",
    "lint-staged": "lint-staged --config=./.tooling/.lintstaged/.lintstagedrc",
    "lints": "concurrently --kill-others-on-fail \"pnpm:lint:*\" ",
    "test:back": "pnpm back test",
    "test:front": "pnpm front test",
    "test:shared": "pnpm shared test",
    "tests": "concurrently --kill-others-on-fail \"pnpm:test:*\"",
    "fullcheck": "concurrently --kill-others-on-fail \"pnpm:tests\" \"pnpm:prettier:check\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "concurrently": "^7.3.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.8.7",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.6.0",
    "typescript": "^4.8.2"
  }
}

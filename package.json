{
  "name": "root",
  "version": "1.0.0",
  "scripts": {
    "db:migrate": "pnpm back db:migrate",
    "db:create": "pnpm back db:create",
    "db:down": "pnpm back db:down",
    "db:up": "pnpm back db:up",
    "db:up:bun": "pnpm back db:up:bun",
    "db:down:bun": "pnpm back db:down:bun",
    "db:redo:bun": "pnpm back db:redo:bun",
    "db:redo": "pnpm back db:redo",
    "db:seed": "pnpm back db:seed",
    "db:seed:bun": "pnpm back db:seed:bun",
    "prepare": "if [[ -z $CI ]]; then husky install && chmod a+x .husky/pre-commit && chmod a+x .husky/pre-push; fi;",
    "generate-front-envfile": "grep 'VITE_' .env > ./front/.env",
    "check:glob": "biome check --diagnostic-level=error",
    "check:fix": "biome check --write --diagnostic-level=error .",
    "check:fix-unsafe": "biome check --write --unsafe --diagnostic-level=error .",
    "back": "pnpm --dir back",
    "front": "pnpm --dir front",
    "shared": "pnpm --dir shared",
    "playwright": "pnpm --dir playwright",
    "playwright:test": "pnpm back db:seed && pnpm playwright test:local",
    "react-design-system": "pnpm --dir libs/react-design-system",
    "html-templates": "pnpm --dir libs/html-templates",
    "lint-staged": "lint-staged --config=./.tooling/.lintstaged/.lintstagedrc",
    "includecheck": "turbo run includecheck",
    "check": "turbo run check",
    "fullcheck": "turbo run verify-migrations-order includecheck check typecheck test --concurrency=50%",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "dev": "turbo run dev",
    "dev:no-typecheck": "turbo run dev:no-typecheck",
    "fast-checks": "turbo run includecheck check verify-migrations-order && pnpm front test && pnpm shared test",
    "bi:setup": "cd bi && ./setup.sh",
    "bi:debug": "cd bi && ./run_dbt.sh debug",
    "bi:run": "cd bi && ./run_dbt.sh run",
    "bi:build": "cd bi && ./build.sh",
    "bi:fullcheck": "cd bi && ./activate.sh && ./run_dbt.sh debug && ./run_dbt.sh run"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "husky": "^8.0.1",
    "lint-staged": "^16.1.2",
    "turbo": "1.4.6",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "overrides": {
      "brace-expansion@>= 1.0.0 <= 1.1.11": "^1.1.12",
      "brace-expansion@>= 2.0.0 <= 2.0.1": "^2.0.2",
      "braces@< 3.0.3": "3.0.3",
      "cookie@< 0.7.0": "^0.7.0",
      "cookiejar@< 2.1.4": "^2.1.4",
      "cross-spawn@>= 7.0.0 < 7.0.5": "^7.0.5",
      "dompurify@< 3.2.4": "^3.2.4",
      "esbuild@<= 0.24.2": "^0.25.0",
      "form-data@< 2.5.4": "^2.5.4",
      "form-data@>= 4.0.0, < 4.0.4": "^4.0.4",
      "ip@< 1.1.9": "^1.1.9",
      "markdown-to-jsx@< 7.4.0": "^7.4.0",
      "micromatch@< 4.0.8": "^4.0.8",
      "on-headers@< 1.1.0": "1.1.0",
      "path-to-regexp@< 0.1.12": "^0.1.12",
      "prismjs@< 1.30.0": "1.30.0",
      "rollup@>= 3.0.0 < 3.29.5": "^3.29.5",
      "store2@< 2.14.4": "^2.14.4",
      "tar@< 6.2.1": "^6.2.1",
      "tar-fs@>= 2.0.0 < 2.1.3": "^2.1.3",
      "xml2js@< 0.5.0": "^0.5.0",
      "ws@>= 6.0.0 < 6.2.3": "^6.2.3",
      "ws@>= 8.0.0 < 8.17.1": "^8.17.1"
    }
  },
  "engines": {
    "node": "^22.14.0"
  },
  "packageManager": "pnpm@10.9.0"
}

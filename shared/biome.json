{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "extends": "//",
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": {
          "level": "error",
          "options": {
            "allow": ["error", "time", "timeEnd"]
          }
        }
      }
    }
  },
  "formatter": {
    "lineWidth": 80,
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "formatWithErrors": true
  },
  "files": {
    "maxSize": 10485760,
    "ignoreUnknown": true,
    "includes": [
      "src/**/*.ts",
      "src/**/*.json",
      "biome.json",
      "tsconfig.json",
      "babel.config.js",
      "package.json",
      "jest.config.js"
    ]
  }
}
